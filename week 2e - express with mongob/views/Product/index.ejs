<!DOCTYPE html>
<html lang="en"><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="http://getbootstrap.com/favicon.ico">

    <title>Home - Broadway</title>

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="/stylesheets/navbar-fixed-top.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <div class="container">
      <% include ../header.ejs %>

    <h1><%= title %></h1>
    <p>Enjoy the widest variety of products at the best prices in Nepal</p>

        <div class="container">
            <!--<% product.forEach(function (item) { %>-->
              <!--<%= item.Title%>-->
            <!--<%})%>-->

            <% for(var i=0;i< product.length;i++){%>
            <div class="col-xs-12 col-md-6 bootstrap snippets">
                <!-- product -->
                <div class="product-content product-wrap clearfix">
                    <div class="row">
                        <div class="col-md-5 col-sm-12 col-xs-12">
                            <div class="product-image">
                                <img src="http://192.241.236.31/themes/preview/smartadmin/1.8.x/ajax/img/demo/e-comm/1.png" alt="194x228" class="img-responsive">
						<span class="tag2 hot">
							<%= product[i].Brand%>
						</span>
                            </div>
                        </div>
                        <div class="col-md-7 col-sm-12 col-xs-12">
                            <div class="product-deatil">
                                <h5 class="name">
                                    <a class="pull-right" href="/Product/delete/<%= product[i]._id%>">Delete</a>
                                    <a href="/product/details/<%= product[i]._id%>">
                                        <%= product[i].Title%> <span><%= product[i].category%></span>
                                    </a>
                                </h5>
                                <p class="price-container">
                                    <span>Rs <%= product[i].Price%></span>
                                </p>
                                <span class="tag1"></span>
                            </div>
                            <div class="description">
                                <p><%= product[i].Description%> </p>
                            </div>
                            <div class="product-info smart-form">
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        <a href="javascript:void(0);" class="btn btn-success">Add to cart</a>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        <div class="rating">
                                            <%for(var j=1;j<= product[i].Rating;j++){%>
                                            <label for="stars-rating-<%=j%>"><i class="fa fa-star"></i></label>
                                            <%if(j >= product[i].Rating){%>
                                            <label for="stars-rating-<%=j%>"><i class="fa fa-star text-primary"></i></label>
                                            <%}}%>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end product -->
            </div>
            <%}%>

        </div>
</div>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/javascripts/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/javascripts/jquery.min.js"><\/script>')</script>
    <script src="/javascripts/bootstrap.min.js"></script>

  </body>
</html>
